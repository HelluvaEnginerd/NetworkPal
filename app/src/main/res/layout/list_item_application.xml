<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="@drawable/drawableback"
    >

<TextView
    android:id="@+id/list_item_application_title_text_view"
    android:layout_width="200sp"
    android:layout_height="wrap_content"
    android:textStyle="bold"
    android:padding="4dp"
    tools:text="Application Title"/>

<TextView
    android:id="@+id/list_item_application_date_text_view"
    android:layout_width="200sp"
    android:layout_height="wrap_content"
    android:layout_below="@+id/list_item_application_title_text_view"
    android:padding="4dp"
    tools:text="Application Date"/>

<TextView
    android:id="@+id/list_item_application_company_text_view"
    android:layout_width="200sp"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@+id/list_item_application_title_text_view"
    android:padding="4dp"
    tools:text="Company"/>

<TextView
    android:id="@+id/list_item_application_contact_text_view"
    android:layout_width="200sp"
    android:layout_height="wrap_content"
    android:layout_below="@+id/list_item_application_company_text_view"
    android:layout_toRightOf="@+id/list_item_application_date_text_view"
    android:padding="4dp"
    tools:text="Contact"/>

</RelativeLayout>