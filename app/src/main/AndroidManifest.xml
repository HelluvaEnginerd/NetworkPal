<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.csci448.goldenrush.networkingpal">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="18"/>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18"/>

    <uses-feature android:name="android.hardware.camera"
        android:required="false"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_supervisor_account_black_24dp"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ApplicationSearchActivity"></activity>
        <activity android:name=".NewApplicationActivity"></activity>
        <activity android:name=".NewContactActivity"></activity>
        <activity android:name=".ContactsActivity"></activity>
        <activity android:name=".DiggernetActivity"
            android:label="@string/diggernet_activity"></activity>

        <activity android:name=".NewEventActivity"
            android:label="@string/new_event_activity"></activity>
        <activity android:name=".CalendarActivity"
            android:label="@string/calendar_activity"></activity>
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="7f4afeebf514035f01c27ddf18ad8bfe27a05491" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
</manifest>